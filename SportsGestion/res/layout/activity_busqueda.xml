<ScrollView 
    	xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	   	android:layout_width="match_parent"
	    android:layout_height="match_parent">	
	    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="476dp"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".BusquedaActivity" >
	
	    <EditText
	        android:id="@+id/edLocalidad"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/edBuscar"
	        android:layout_below="@+id/edBuscar"
	        android:layout_marginTop="64dp"
	        android:ems="10"
	        android:text="@string/kLocalidad" >
	
	        <requestFocus />
	    </EditText>
	
	    <EditText
	        android:id="@+id/edBuscar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/button2"
	        android:layout_below="@+id/QueBuscas"
	        android:layout_marginTop="40dp"
	        android:ems="10"
	        android:text="@string/kDeporte" />

	    <TextView
	        android:id="@+id/QueBuscas"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="76dp"
	        android:layout_marginTop="39dp"
	        android:text="@string/QueBuscas"
	        android:textSize="@dimen/newDimension" />

	    <Button
	        android:id="@+id/buttonBuscar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignRight="@+id/QueBuscas"
	        android:layout_marginBottom="15dp"
	        android:layout_marginRight="11dp"
	        android:text="@string/BUSCAR" />

	    <Button
	        android:id="@+id/button2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/buttonBuscar"
	        android:layout_below="@+id/edLocalidad"
	        android:layout_marginRight="46dp"
	        android:layout_marginTop="46dp"
	        android:text="Rellenar" />
	
	</RelativeLayout>
</ScrollView>	